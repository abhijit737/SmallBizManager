@model IEnumerable<SmallBizManager.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Role</td>
                <td>@employee.Phone</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.Address</td>
                <td>
                    <a href="@Url.Action("Edit", "Employee", new { id = employee.EmployeeId })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Employee", new { id = employee.EmployeeId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Employee")" class="btn btn-success">Create New Employee</a>
